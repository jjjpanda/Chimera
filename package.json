{
  "name": "chimera",
  "version": "4.3.3",
  "description": "a microservices based security camera system",
  "main": "server.js",
  "scripts": {
    "build": "cd command && npm run build",
    "buildCont": "cd command && npm run buildCont",
    "prestart": "npx npm-run-all -s --npm-path npm register \"validate:*\"",
    "start": "npx pm2 start pm2.config.js",
    "register": "node chimera/register.js",
    "validate:env": "node chimera/splitAndValidateEnvVars.js",
    "validate:pass": "node chimera/generateEmptyPassFile.js",
    "validate:acme": "npx mkdirp ./.well-known/acme-challenge",
    "start:command": "cd command && npm start",
    "start:livestream": "cd livestream && npm start",
    "start:schedule": "cd schedule && npm start",
    "start:storage": "cd storage && npm start",
    "start:gateway": "cd gateway && npm start",
    "start:memory": "cd memory && npm start",
    "reload": "npx pm2 reload pm2.config.js",
    "list": "npx pm2 list",
    "monitor": "npx pm2 monit",
    "kill": "npx pm2 stop all",
    "delete": "npx pm2 delete all",
    "stop": "npx npm-run-all -s --npm-path npm kill delete",
    "poststop": "pkill PM2",
    "logs": "npx pm2 logs",
    "lint": "eslint --ext .jsx --ext .js \".\" -o eslint/lintOutput.html -f html",
    "lintfix": "eslint --ext .jsx --ext .js \".\" -o eslint/lintOutput.html -f html --fix",
    "install:root": "npm install",
    "install:lib": "cd lib && npm install",
    "install:command": "cd command && npm install",
    "install:livestream": "cd livestream && npm install",
    "install:schedule": "cd schedule && npm install",
    "install:storage": "cd storage && npm install",
    "install:gateway": "cd gateway && npm install",
    "install:memory": "cd memory && npm install",
    "delete-logs": "npx rimraf **/log",
    "delete-feed": "npx rimraf **/feed",
    "delete-shared": "npx rimraf **/shared",
    "delete-eslint": "npx rimraf **/eslint",
    "delete-coverage": "npx rimraf **/coverage",
    "delete-modules": "npx rimraf **/node_modules",
    "delete-locks": "npx rimraf **/package-lock.json",
    "delete-shrinkwraps": "npx rimraf **/npm-shrinkwrap.json",
    "clear": "npx npm-run-all -p --npm-path npm delete-*",
    "test": "npx jest",
    "prunewrap:lib": "cd lib && npm run prunewrap",
    "prunewrap:root": "npm prune --production && npm shrinkwrap",
    "prunewrap:command": "cd command && npm run prunewrap",
    "prunewrap:livestream": "cd livestream && npm run prunewrap",
    "prunewrap:schedule": "cd schedule && npm run prunewrap",
    "prunewrap:storage": "cd storage && npm run prunewrap",
    "prunewrap:gateway": "cd gateway && npm run prunewrap",
    "prunewrap:memory": "cd memory && npm run prunewrap",
    "prerelease": "npx npm-run-all -s --npm-path npm delete-locks delete-shrinkwraps \"install:* -- --include=dev\"",
    "release": "npx npm-run-all -s --npm-path npm build test",
    "postrelease": "npx npm-run-all -s --npm-path npm delete-locks install:* prunewrap:*"
  },
  "dependencies": {
    "command": "file:./command",
    "dotenv": "^10.0.0",
    "gateway": "file:./gateway",
    "heartbeat": "jjjpanda/heartbeat#v1.2.5",
    "lib": "file:./lib",
    "livestream": "file:./livestream",
    "memory": "file:./memory",
    "mkdirp": "^1.0.4",
    "npm-run-all": "^4.1.5",
    "pm2": "^5.1.2",
    "schedule": "file:./schedule",
    "storage": "file:./storage",
    "object": "jjjpanda/object#v1.1.1"
  },
  "devDependencies": {
    "eslint": "^8.2.0",
    "eslint-plugin-react": "^7.27.0",
    "jest": "^27.3.1",
    "supertest": "^6.1.6"
  }
}
