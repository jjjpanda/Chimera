{
  "name": "chimera",
  "version": "4.2.0",
  "description": "a microservices based security camera system",
  "main": "server.js",
  "scripts": {
    "build": "npm explore command -- npm run build",
    "buildCont": "npm explore command -- npm run buildCont",
    "prestart": "npx npm-run-all -s register \"validate:*\" build",
    "start": "npx pm2 start pm2.config.js",
    "server": "node server.js",
    "register": "node register.js",
    "validate:env": "node splitAndValidateEnvVars.js",
    "validate:acme": "npx mkdirp ./.well-known/acme-challenge",
    "list": "npx pm2 list",
    "monitor": "npx pm2 monit",
    "kill": "npx pm2 stop all",
    "delete": "npx pm2 delete all",
    "stop": "npx npm-run-all -s kill delete",
    "poststop": "pkill PM2",
    "logs": "npx pm2 logs",
    "lint": "eslint --ext .jsx --ext .js \".\" -o eslint/lintOutput.html -f html",
    "lintfix": "eslint --ext .jsx --ext .js \".\" -o eslint/lintOutput.html -f html --fix",
    "install:root": "npm install",
    "install:command": "npm explore command -- npm install",
    "install:livestream": "npm explore livestream -- npm install",
    "install:schedule": "npm explore schedule -- npm install",
    "install:storage": "npm explore storage -- npm install",
    "install:lib": "npm explore lib -- npm install",
    "install:gateway": "npm explore gateway -- npm install",
    "install:memory": "npm explore memory -- npm install",
    "install-all": "npx npm-run-all -s --npm-path npm \"install:*\"",
    "install-all-dev": "npx npm-run-all -s --npm-path npm \"install:* -- --include=dev\"",
    "test": "npx jest"
  },
  "dependencies": {
    "command": "file:./command",
    "dotenv": "^10.0.0",
    "gateway": "file:./gateway",
    "heartbeat": "git+https://github.com/jjjpanda/heartbeat.git",
    "lib": "file:./lib",
    "livestream": "file:./livestream",
    "memory": "file:./memory",
    "mkdirp": "^1.0.4",
    "npm-run-all": "^4.1.5",
    "pm2": "^5.1.2",
    "schedule": "file:./schedule",
    "storage": "file:./storage"
  },
  "devDependencies": {
    "eslint": "^8.2.0",
    "eslint-plugin-react": "^7.27.0",
    "jest": "^27.3.1",
    "supertest": "^6.1.6"
  }
}
